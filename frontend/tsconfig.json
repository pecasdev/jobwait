{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "es2015",
        "target": "ESNext",
        "lib": ["es6", "dom", "esnext"],
        "types": ["vite/client"],
        "isolatedModules": true,
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "include": ["src", "types"],
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "./dist/**/*"
    ],
    "types": ["typePatches", "jest"],
    "esModuleInterop": true,
    "resolve": { "extensions": [".tsx"] }
}
